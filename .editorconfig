root = true

[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2
max_line_length = 140

[**.{yml,yaml,md}]
max_line_length = unset

[src/{LogicTasks/{Semantics,Syntax}/*,Tasks/*/Config.hs},examples/src/{Semantics,Syntax}/**/Config.hs]
max_line_length = unset

[.github/actions/spelling/*]
max_line_length = unset
